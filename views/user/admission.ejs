<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admission Form</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body, html {
  margin: 0;
  padding: 0;
  font-family: Arial, sans-serif;
}
.container {
  width: 50%;
  margin: 50px auto;
  padding: 20px;
  border: 1px solid #ccc;
}
.step {
  display: none;
}
.step.active {
  display: block;
}
input, select {
  width: 100%;
  margin-bottom: 15px;
  padding: 8px;
}
button {
  padding: 10px 15px;
  background-color: #2EC4B6;
  color: white;
  border: none;
  cursor: pointer;
}
button:hover {
  background-color: #28a99f;
}

  </style>
</head>
<body>
  <div class="container">
    <h2>Admission Form</h2>
    <form id="admissionForm" action="/generate-pdf" method="POST">
      <!-- Step 1 -->
      <div class="step active" id="step-1">
        <label>Full Name:</label>
        <input type="text" name="fullName" required />
        <label>Email:</label>
        <input type="email" name="email" required />
        <button type="button" onclick="nextStep(1)">Next</button>
      </div>

      <!-- Step 2 -->
      <div class="step" id="step-2">
        <label>Class:</label>
        <select name="classFinal" id="classFinal" required>
          <option value="">-- Select Class --</option>
          <option value="FY">FY</option>
          <option value="SY">SY</option>
          <option value="TY">TY</option>
        </select>

        <label>Subjects:</label>
        <select name="subjectsFinal" id="subjectsFinal" multiple required>
          <!-- auto fill based on classFinal -->
        </select>

        <button type="button" onclick="prevStep(1)">Back</button>
        <button type="submit">Submit & Generate PDF</button>
      </div>
    </form>
  </div>

  <script>
    const steps = document.querySelectorAll('.step');
    function showStep(n) {
      steps.forEach((s, i) => {
        if (i === n) s.classList.add('active');
        else s.classList.remove('active');
      });
    }
    function nextStep(n) { showStep(n); }
    function prevStep(n) { showStep(n); }

    // Class â†’ Subject dynamic
    const subjectsByClass = {
      FY: ["Mathematics", "Physics", "Chemistry"],
      SY: ["Biology", "English", "Computer Science"],
      TY: ["Economics", "Accountancy", "Business Studies"]
    };
    const classFinal = document.getElementById('classFinal');
    const subjectsFinal = document.getElementById('subjectsFinal');
    classFinal.addEventListener('change', function(){
      const c = this.value;
      subjectsFinal.innerHTML = '';
      if (subjectsByClass[c]) {
        subjectsByClass[c].forEach(s => {
          const opt = document.createElement('option');
          opt.value = s;
          opt.text = s;
          subjectsFinal.appendChild(opt);
        });
      }
    });
  </script>
</body>
</html>
